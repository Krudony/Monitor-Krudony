<Window x:Class="LanguageMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Language Monitor" Height="45" Width="65"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        Left="0" Top="0"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Border Name="CardBorder" CornerRadius="8" Background="#DD333333" BorderBrush="Transparent" BorderThickness="0">
        <Grid>
            <!-- Language Text -->
            <TextBlock Name="LangText" Text="--" Foreground="White"
                       FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       IsHitTestVisible="False"/>
            
            <!-- Close Button (Small 'x' at top-right) -->
            <Button Name="CloseBtn" Content="x"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Width="16" Height="16" Margin="0,2,2,0"
                    Background="Transparent" BorderBrush="Transparent"
                    Foreground="#999999" FontSize="10" FontWeight="Bold"
                    Cursor="Hand"
                    Click="CloseBtn_Click"
                    MouseEnter="CloseBtn_MouseEnter"
                    MouseLeave="CloseBtn_MouseLeave">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>